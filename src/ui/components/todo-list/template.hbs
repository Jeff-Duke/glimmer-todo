<div id='todo-app'>
  <ul>
    {{#each items key='@index' as |item|}}
      <todo-item @item={{item}}
        @deleteItem={{action deleteItem}}
        @toggleItem={{action toggleItem}}
      />
    {{/each}}
  </ul>

  <input placeholder='New Todo' value={{newItemText}} onkeyup={{action updateNewItemText}} />

  <button onclick={{action addItem}} class='addItemButton'>
    Add Item
  </button>

</div>